<div class="ui two column centered stackable grid">
  <div class="column">
    <div class="ui header"><%= t ".sign_up" %></div>

    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui form segment"} do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, t(".email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password do %>
          <span><%= t ".password" %>&nbsp;<% if @minimum_password_length %>
            <em><%= t ".characters_minimum", length: @minimum_password_length %></em>
          <% end %>
          </span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t(".password_confirmation") %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="ui one column grid">
      <div class="actions center aligned column">
        <%= f.submit t(".sign_up"), class: "ui large primary button" %>
      </div>
      </div>
    <% end %>
  </div>
</div>
