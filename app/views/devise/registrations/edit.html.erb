<div class="ui two column centered stackable grid">
  <div class="column">
    <div class="ui header"><%= t ".edit" %></div>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: "ui form segment"} do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name, t(".name")  %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email, t(".email") %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t ".waiting", unconfirmed_email: resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, t(".password") %>
        <i>
          <%= t ".leave_blank" %>
        </i>

        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em><%= t ".characters_minimum", length: @minimum_password_length %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t(".password_confirmation") %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password, t(".current_password") %>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions ui two column grid">
        <div class="right aligned column">
          <%= f.submit t(".update"), class: "ui primary button" %>
        </div>
        <div class="left aligned column">
          <%= link_to t(".back"), :back, class: "ui button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
