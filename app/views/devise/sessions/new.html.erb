<div class="ui two column centered stackable grid">
  <div class="column">
    <div class="ui header"><%= t ".log_in" %></div>
    <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form segment"} do |f| %>
      <div class="field">
        <%= f.label :email, t(".email") %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, t(".password") %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <div class="ui checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me do %>
              <%= t ".remember_me" %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="actions ui two column centered stackable grid">
        <div class="right aligned column">
          <%= f.submit t(".log_in"), class: "ui primary button" %>
        </div>
        <div class="left aligned column">
          <%= link_to t(".sign_up"), new_registration_path(resource_name), class: "ui positive button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
