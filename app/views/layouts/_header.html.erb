<div class="ui menu">
  <%= link_to t("logo_header"), root_path, class: "header item" %>
  <div class="right menu">
    <% if user_signed_in? %>
      <div class="ui dropdown item">
        <%= t ".profile", class: "text" %>
        <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to t(".edit"), edit_user_registration_path, class: "item" %>
        </div>
      </div>
      <%= link_to t(".logout"), destroy_user_session_path, method: :delete, class: "item" %>
    <% else %>
      <%= link_to t(".login"), new_user_session_path, class: "item" %>
    <% end %>
  </div>
</div>
